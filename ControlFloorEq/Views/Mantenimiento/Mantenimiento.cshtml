                document.getElementById('elegirDespuesBtn').addEventListener('click', function () {
                    document.getElementById('afterImageInput').click();
                });

                function handleFileUpload(event) {
                    const files = event.target.files;
                    const uploadedFilesContainer = document.getElementById('uploadedFiles');
                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        const fileElement = document.createElement('div');
                        const fileLink = document.createElement('a');
                        fileLink.href = URL.createObjectURL(file);
                        fileLink.target = "_blank";
                        fileLink.rel = "noopener noreferrer";
                        fileLink.textContent = file.name;
                        fileElement.appendChild(fileLink);
                        uploadedFilesContainer.appendChild(fileElement);
                    }
                }

                function handleBeforeImageUpload(event) {
                    const files = event.target.files;
                    const beforeImagesContainer = document.getElementById('beforeImages');
                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        const imgElement = document.createElement('img');
                        imgElement.src = URL.createObjectURL(file);
                        imgElement.alt = `Antes ${i + 1}`;
                        beforeImagesContainer.appendChild(imgElement);
                    }
                }

                function handleAfterImageUpload(event) {
                    const files = event.target.files;
                    const afterImagesContainer = document.getElementById('afterImages');
                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        const imgElement = document.createElement('img');
                        imgElement.src = URL.createObjectURL(file);
                        imgElement.alt = `Después ${i + 1}`;
                        afterImagesContainer.appendChild(imgElement);
                    }
                }

