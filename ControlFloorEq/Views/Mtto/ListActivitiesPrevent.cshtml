
  
    <title>Actividades Preventivas</title>
    
    <style>
        #activitiesTable {
            width: 100%;
            border-collapse: collapse;
        }

            #activitiesTable th, #activitiesTable td {
                padding: 8px;
                border: 1px solid #ddd;
                text-align: left;
            }

            #activitiesTable th {
                background-color: #f2f2f2;
            }

            #activitiesTable tr:hover {
                background-color: #f5f5f5;
            }
    </style>

    <div class="container-fluid p-0">
        <div class="mb-3">
            <h1 class="h3 d-inline align-middle">Actividades Preventivas</h1>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="dt-responsive table-responsive">
                            <table id="activitiesTable" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>CallId</th>
                                        <th>LineNum</th>
                                        <th>ClgId</th>
                                        <th>Actividad</th>
                                        <th>Fecha Inicio</th>
                                        <th>Hora Inicio</th>
                                        <th>Fecha Fin</th>
                                        <th>Hora Fin</th>
                                        <th>Duración</th>
                                        <th>Comentarios</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Los datos se llenarán dinámicamente con JavaScript -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

 
    <!-- Script personalizado -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tableBody = document.querySelector("#activitiesTable tbody");

            // Función para obtener los datos del servidor
            async function fetchActivities() {
                try {
                    const response = await fetch('/Mtto/ListActivitiesPrevent');
                    if (!response.ok) {
                        throw new Error("Error al obtener los datos");
                    }
                    const result = await response.json();
                    if (result.IsError) {
                        alert(result.Message || "Error al obtener las actividades.");
                        return;
                    }
                    populateTable(result);
                } catch (error) {
                    console.error("Error:", error);
                    alert("Hubo un error al cargar las actividades.");
                }
            }
           
            // Función para llenar la tabla con los datos
            function populateTable(activities) {
                tableBody.innerHTML = ""; // Limpiar la tabla antes de llenarla
                activities.forEach(activity => {
                    const row = document.createElement("tr");
                    row.innerHTML = `
                                <td>${activity.CallId}</td>
                                <td>${activity.LineNum}</td>
                                <td>${activity.ClgId}</td>
                                <td>${activity.Activiti}</td>
                                <td>${activity.DateStart.split('T')[0]}</td>
                                <td>${activity.TimeStart}</td>
                                <td>${activity.DateEnd.split('T')[0]}</td>
                                <td>${activity.TimeEnd}</td>
                                <td>${activity.Duration}</td>
                                <td>${activity.Remarks}</td>
                            `;
                    tableBody.appendChild(row);
                });
            }

            // Llamar a la función para obtener los datos
            fetchActivities();
        });
    </script>
